{
  "python.testing.pytestArgs": ["tests"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.formatting.provider": "black",
  "editor.semanticHighlighting.enabled": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "name": "Python keyword control",
        "scope": [
          // import, from, as
          "keyword.control.import.python",
          // , - > 
          "punctuation.separator.annotation.result.python",
          "punctuation.separator.period.python",
          "punctuation.separator.element.python",
          "punctuation.separator.arguments.python",
          "keyword.control.flow.python"
        ],
        "settings": {
          "foreground": "#FC618D"
        }
      },
      {
        "name": "Python strings single quoted",
        "scope": [
          "string.quoted.single.python",
          "string.quoted"
        ],
        "settings": {
          "foreground": "#E0E0E0"
        }
      },
      {
        "name": "Python strings triple quoted",
        "scope": [
          "string.quoted.multi.python",
        ],
        "settings": {
          "foreground": "#E0E0E0",
          "fontStyle": "italic"
        }
      },
      {
        "name": "Python comment",
        "scope": [
          "comment.line.number-sign.python",
        ],
        "settings": {
          "foreground": "#8d8c8c",
          "fontStyle": "italic"
        }
      },
      {
        "name": "Python storage type",
        "scope": [
          "storage.type.class.python",
          "storage.type.function.python",
          "meta.class.python",
          "meta.function.python"
        ],
        "settings": {
          "foreground": "#58B0E3"
        },
        // "examples": ["def", "class"]
      },
      {
        "name": "Python function names",
        "scope": [
          "entity.name.function.python"
        ],
        "settings": {
          "foreground": "#1AC5B0"
        }
        // "examples": [getData]
      },
      {
        "name": "Python class definition",
        "scope": [
          "entity.name.type.class.python"
        ],
        "settings": {
          "foreground": "#1AC5B0"
        }
        // "examples": [getData]
      },
      {
        "name": "Python function call",
        "scope": [
          "meta.function-call.generic.python"
        ],
        "settings": {
          "foreground": "#1AC5B0"
        }
        // "examples": [getData()]
      },
      
      {
        "name": "Python attributes",
        "scope": [
          // parameters
          "variable.parameter.function-call.python",
          "variable.parameter.function.language.python",
          // __init__
          "support.function.magic.python"
        ],
        "settings": {
          "foreground": "#F7DB6A"
        }
      },
      {
        "name": "Python member",
        "scope": [
          // pd.DataFrame affects to DataFrame
          "meta.member.access.python"
        ],
        "settings": {
          "foreground": "#7AD3F8"
        }
      },
      {
        "name": "Python source",
        "scope": [
          "source.python",
        ],
        "settings": {
          "foreground": "#58B0E3"
        }
      },
    ]
  }
}
