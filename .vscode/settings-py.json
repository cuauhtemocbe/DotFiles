{
  // ===== WINDOW & EDITOR SETTINGS =====
  "window.restoreWindows": "none",
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.semanticHighlighting.enabled": false,

  // ===== FILE MANAGEMENT =====
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,

  // ===== PYTHON SETTINGS =====
  "python.formatting.provider": "black",
  
  // Python Testing
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": ["tests"],

  // ===== SYNTAX HIGHLIGHTING =====
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      // Control Flow & Keywords
      {
        "name": "Python keyword control",
        "scope": [
          "keyword.control.import.python",        // import, from, as
          "keyword.control.flow.python",          // if, for, while, etc.
          "punctuation.separator.annotation.result.python",  // ->
          "punctuation.separator.period.python",             // .
          "punctuation.separator.element.python",            // ,
          "punctuation.separator.arguments.python"           // , in function args
        ],
        "settings": {
          "foreground": "#FC618D"
        }
      },

      // String Literals
      {
        "name": "Python strings single quoted",
        "scope": [
          "string.quoted.single.python",
          "string.quoted"
        ],
        "settings": {
          "foreground": "#E0E0E0"
        }
      },
      {
        "name": "Python strings triple quoted",
        "scope": [
          "string.quoted.multi.python"
        ],
        "settings": {
          "foreground": "#E0E0E0",
          "fontStyle": "italic"
        }
      },

      // Comments
      {
        "name": "Python comment",
        "scope": [
          "comment.line.number-sign.python"
        ],
        "settings": {
          "foreground": "#8d8c8c",
          "fontStyle": "italic"
        }
      },

      // Definitions & Declarations
      {
        "name": "Python storage type",
        "scope": [
          "storage.type.class.python",    // class keyword
          "storage.type.function.python", // def keyword
          "meta.class.python",
          "meta.function.python"
        ],
        "settings": {
          "foreground": "#58B0E3"
        }
      },

      // Names & Identifiers
      {
        "name": "Python function names",
        "scope": [
          "entity.name.function.python"
        ],
        "settings": {
          "foreground": "#1AC5B0"
        }
      },
      {
        "name": "Python class definition",
        "scope": [
          "entity.name.type.class.python"
        ],
        "settings": {
          "foreground": "#1AC5B0"
        }
      },
      {
        "name": "Python function call",
        "scope": [
          "meta.function-call.generic.python"
        ],
        "settings": {
          "foreground": "#1AC5B0"
        }
      },
      
      // Parameters & Attributes
      {
        "name": "Python attributes",
        "scope": [
          "variable.parameter.function-call.python",    // function parameters
          "variable.parameter.function.language.python", // built-in parameters
          "support.function.magic.python"               // __init__, __str__, etc.
        ],
        "settings": {
          "foreground": "#F7DB6A"
        }
      },

      // Member Access & Source
      {
        "name": "Python member",
        "scope": [
          "meta.member.access.python"  // pd.DataFrame -> DataFrame
        ],
        "settings": {
          "foreground": "#7AD3F8"
        }
      },
      {
        "name": "Python source",
        "scope": [
          "source.python"
        ],
        "settings": {
          "foreground": "#58B0E3"
        }
      }
    ]
  }
}
